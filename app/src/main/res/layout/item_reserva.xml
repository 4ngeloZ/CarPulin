<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/Reserva_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/user" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Reserva_pasajero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasajero" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Reserva_viaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viaje:" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Reserva_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origen" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Reserva_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Reserva_plazas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plazas solicitadas" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <Button
                android:id="@+id/Reserva_aceptar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#323F8B"
                android:onClick="AceptarReserva"
                android:text="Aceptar"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/Reserva_rechazar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#323F8B"
                android:onClick="RechazarReserva"
                android:text="Rechazar"
                android:textColor="#FFFFFF" />
        </TableRow>

    </TableLayout>

</LinearLayout>
