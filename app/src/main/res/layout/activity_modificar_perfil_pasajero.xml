<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ModificarPerfilPasajeroActivity">

    <EditText
        android:id="@+id/ModificarPerfilPasajeroActivity_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="#3F51B5"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ModificarPerfilPasajeroActivity_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#3F51B5"
        android:ems="10"
        android:hint="TelÃ©fono"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/ModificarPerfilPasajeroActivity_correo"
        app:layout_constraintTop_toBottomOf="@+id/ModificarPerfilPasajeroActivity_correo" />

    <EditText
        android:id="@+id/ModificarPerfilPasajeroActivity_preferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3F51B5"
        android:ems="10"
        android:hint="Preferencias"
        android:inputType="textPersonName|textMultiLine"
        android:text="No ha ingresado preferencias"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/ModificarPerfilPasajeroActivity_telefono"
        app:layout_constraintTop_toBottomOf="@+id/ModificarPerfilPasajeroActivity_telefono" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:background="#323F8B"
        android:onClick="actualizarPasajero"
        android:text="Guardar cambios"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ModificarPerfilPasajeroActivity_preferencias"
        app:layout_constraintTop_toBottomOf="@+id/ModificarPerfilPasajeroActivity_preferencias" />

</android.support.constraint.ConstraintLayout>