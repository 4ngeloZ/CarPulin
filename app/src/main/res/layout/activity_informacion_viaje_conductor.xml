<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    tools:context=".Activities.InformacionViajeConductorActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/InformacionViajeCActivity_Parada1"
                android:layout_width="206dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Origen1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Fecha1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Hora1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hora" />

            </TableRow>
            <TableRow
                android:id="@+id/InformacionViajeCActivity_Parada2"
                android:layout_width="206dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Origen2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Fecha2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Hora2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hora" />

            </TableRow>
            <TableRow
                android:id="@+id/InformacionViajeCActivity_Parada3"
                android:layout_width="206dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Origen3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Fecha3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Hora3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hora" />

            </TableRow>
            <TableRow
                android:id="@+id/InformacionViajeCActivity_Parada4"
                android:layout_width="206dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Origen4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Fecha4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Hora4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hora" />

            </TableRow>
            <TableRow
                android:id="@+id/InformacionViajeCActivity_Parada5"
                android:layout_width="206dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Origen5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Fecha5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Hora5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hora" />

            </TableRow>
            <TableRow
                android:id="@+id/InformacionViajeCActivity_Parada6"
                android:layout_width="206dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Origen6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Fecha6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha" />

                <TextView
                    android:id="@+id/InformacionViajeCActivity_Hora6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hora" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerReservasViajeSubir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

    <Button
        android:id="@+id/button_iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="iniciarViaje"
        android:text="Iniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecyclerReservasViajeSubir" />

</android.support.constraint.ConstraintLayout>


