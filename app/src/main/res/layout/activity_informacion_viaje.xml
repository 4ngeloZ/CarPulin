                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/InformacionViajeActivity_Origen1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Origen" />

                <TextView
                    android:id="@+id/InformacionViajeActivity_Destino1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Destino" />

                <TextView
                    android:id="@+id/InformacionViajeActivity_Precio1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Precio" />

            </TableRow>

            <TableRow
