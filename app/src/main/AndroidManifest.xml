<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carpulin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.InformacionViajeActivity"></activity>
        <activity android:name=".Activities.ViajesEncontradosActivity" />
        <activity android:name=".Activities.BuscarViajeActivity" />
        <activity android:name=".Activities.RegistroActivity" />
        <activity android:name=".Activities.CrearViajeActivity" />
        <activity
            android:name=".Activities.PasajeroActivity"
            android:label="Carpulin Pasajero"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ConductorActivity"
            android:label="@string/title_activity_conductor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>